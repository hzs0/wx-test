/* pages/novel/novel.wxss */
.novel-top{
  width: 100%;
  height: 150px;
  background:rgba(193, 196, 198);
}
.novel-cover{
  width: 120px;
  height: 150px;
  float: left;
}
.novel-cover image{
  width: 95px;
  height: 130px;
  margin: 18px 0 0 20px;
}
.novel-intr{
  height: 150px;
  float: left;
}
.novel-name{
  color: white;
  margin: 20px 0 0 10px;
  font-size: 17px;
}
.novel-author span{
  /* display: flex; */
  font-size: 12px;
  color: white;
  margin:15px 0 0 10px;
}
.novel-desc{
  height: 120px;
  font-size: 14px;
  padding: 17px 15px 3px;
  line-height: 23px;
  border-bottom: 1px solid #ccc;
}
.novel-desc span{
  max-height: 92px;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: normal;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  display: block;
  display: -webkit-box;
}
.catalog{
  width: 100%;
  height: 50px;
  line-height: 40px;
  border-bottom: 10px solid rgb(228, 229, 231);
}
.catalog h1{
  font-size: 16px;
  margin:5px 0 0 10px;
}
.catalog span{
  font-size: 12px;
  float: right;
  padding-right: 15px;
  color: rgb(145, 145, 145);
}
.more-novel{
  width: 100%;
  height: 150px;
  background: white;
}
.more-cover{
  width: 120px;
  height: 150px;
  float: left;
}
.more-cover image{
  width: 95px;
  height: 130px;
  margin: 18px 0 0 20px;
}
.more-intr{
  width: 60%;
  height: 150px;
  float: left;
}
.more-name{
  color: black;
  margin: 20px 0 0 10px;
  font-size: 17px;
}
.more-author span{
  /* display: flex; */
  font-size: 12px;
  color: black;
  margin:15px 0 0 10px;
}
.more-desc{
  width: 100%;
  height: 30px;
  margin:20px 0 0 10px;
  font-size: 14px;
  color: black;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.more-chapter{
  font-size: 12px;
  float: right;
  padding-right: 15px;
  color: rgb(145, 145, 145);
}