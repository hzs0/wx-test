/* pages/movie/movie.wxss */
.tab{
  display: flex;
  -webkit-box-align: center;
  align-items: center;
  height: 88rpx;
  -webkit-box-pack: justify;
  justify-content: space-between;
  background: white;
  border-bottom: 1px solid #ccc;
}
.city-entry{
  padding-left: 15px;
  font-size: 15px;
  color: #666;
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
  align-items: center;
}
.city-entry-arrow {
  margin-right: 1px;
  width: 0;
  height: 0;
  border: 4px solid #b0b0b0;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  display: inline-block;
  margin-left: 4px;
  margin-top: 5px;
}
.nav{
  width: 100%;
  display: flex;
  height: 30px;
  line-height: 20px;
  position: relative;
  margin: 0 auto;
  background-color: white;
}
.normal{
  font-size: 13px;
  color: #666;
  width: 80rpx;
  text-align: center;
  margin: 5px auto;
  font-weight: 700;
}
.select{
  font-size: 13px;
  color: #666;
  width: 80rpx;
  text-align: center;
  margin: 5px auto;
  font-weight: 700; 
  /* border-bottom: 2px solid #666; */
}

.search{
  width: 45px;
  border-left: 1px solid #ccc;

}
.search image{
  width: 20px;
  height: 20px;
  padding: 15px 10px 10px 15px;

}
.item-box{
  min-height: 5900px;
  
  padding-left: 10px;
  padding-right: 10px;

}

.list{
  width: 43%;
  min-height: 300px;
  float: left;
  margin-left: 15px;
  margin-top: 10px;
  background: white;
  text-align: center;
  border-radius: 5px;
}
.novel-img{
  width: 100%;
  /* height: 225px; */
  border-radius: 5px;
}
.bookname{
  font-size: 13px;
  height: 30px;
  margin-top: 15px;
  font-weight: 600;

}
.book-author{
  font-size: 13px;
  float: left;

}
.author-img{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  /* border: 1px solid #666; */
  float: left;
  margin-left: 10px;
}
.author-name{
  margin-left: 5px;

}
.cover-box{
  width: 45%;
  min-height: 170px;
  float: left;
  margin-left: 12px;
  margin-top: 10px;
  background: white;
  text-align: center;
  border-radius: 5px;
}
.video-cover image{
  width: 100%;
  height: 100px;
}
.video-title{
  font-size: 12px;
}
.video-author{
  margin-left: 5px;
  font-size: 10px;
  line-height: 20px;
}
.video-author image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  float: left;
}
.piece-title{
  width: 100%;
  height: 40px;
  text-align: center;
  
}
.pre{
  width:80px;
  height: 30px;
  float: left; 
  font-size: 12px;
}
.next{
  width:80px;
  height: 30px;
  float: right; 
  font-size: 12px;
}
.piece-content{
  font-size: 14px;
  margin-top: 30px;
}
.piece-author{
  width: 50%;
  height: 30px;
  float: left;
}
.piece-author image{
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.piece-author span{
  font-size: 13px;
  margin-left: 10px;
}
.create-time{
  font-size: 13px;
  float: right;
  margin-top: 5px;
}
.movie-box{
  width: 100%;
  height: 150px;
  background: white;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.movie-cover{
  width: 120px;
  height: 150px;
  float: left;
}
.movie-cover image{
  width: 95px;
  height: 130px;
  margin: 18px 0 0 20px;
}
.movie-intr{
  width: 60%;
  height: 150px;
  float: left;
}
.movie-name{
  color: black;
  margin: 20px 0 0 10px;
  font-size: 17px;
}
.movie-author span{
  /* display: flex; */
  font-size: 12px;
  color: black;
  margin:15px 0 0 10px;
}
.movie-desc{
  width: 100%;
  height: 30px;
  margin:20px 0 0 10px;
  font-size: 14px;
  color: black;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.movie-chapter{
  font-size: 12px;
  margin-left: 10px;
  color: rgb(145, 145, 145);
}

